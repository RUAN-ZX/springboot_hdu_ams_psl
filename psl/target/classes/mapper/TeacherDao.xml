<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ryanalexander.alibaba.dao.TeacherDao">


    <insert id="t_insertByIdName" parameterType="java.util.List">
	    insert into teacher(t_id, t_name) values
	    <foreach collection ="list" item="t" separator =",">
			(#{t.t_id}, #{t.t_name})
		</foreach>
	</insert>

	<insert id="t_insertByIdNameEmail" parameterType="java.util.List">
		insert into teacher (t_id, t_name, t_mail)
		values
		<foreach collection="list" item="item" index="index" separator="," >
			(#{item.t_id}, #{item.t_name}, #{item.t_mail})
		</foreach>
	</insert>
	<update id="t_updateEmail" parameterType="String">
		UPDATE teacher SET t_mail = #{t_mail} WHERE t_id = #{t_id}
	</update>


	<update id="t_updatePwd" parameterType="String">
		UPDATE teacher SET t_pwd = #{Tpwd} WHERE t_id = #{t_id}
	</update>

	<select id="t_getById" parameterType="String" resultType="cn.ryanalexander.alibaba.entity.Teacher">
		select * from teacher where t_id=#{t_id}

	</select>




</mapper>